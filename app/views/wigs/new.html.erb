<h2>create a wig</h2>
<%= simple_form_for(@wig) do |f| %>
  <%= f.input :name %>
  <%= f.input :style, collection: { "curly", "straight", "afro", "wavy", "other" } %>
  <%= f.input :color, collection: { "blond", "black", "brown", "red", "yellow", "pink", "blue", "green", "other" } %>
  <%= f.input :size %>
  <%= f.input :price %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit %>
<% end %>